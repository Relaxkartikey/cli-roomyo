{
  "kind": "collectionType",
  "collectionName": "spaces",
  "info": {
    "singularName": "space",
    "pluralName": "spaces",
    "displayName": "Space",
    "description": "Property listings for rent and PG accommodations"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Rent Roomyo",
        "Roomyo Spaces"
      ],
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "priceNumeric": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "amenities": {
      "type": "component",
      "component": "space.amenities",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true
    },
    "roomType": {
      "type": "string",
      "required": true
    },
    "hostName": {
      "type": "string",
      "required": true
    },
    "hostRating": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "max": 5
    },
    "hostResponseTime": {
      "type": "string",
      "required": true
    },
    "hostEmail": {
      "type": "email",
      "required": true
    },
    "hostPhone": {
      "type": "string",
      "required": true
    },
    "privileges": {
      "type": "component",
      "component": "space.privileges",
      "required": true
    }
  }
} 