{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": "Blog posts for the website"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 300
    },
    "coverImage": {
      "type": "media",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "tags": {
      "type": "json",
      "required": true
    },
    "publishedAt": {
      "type": "datetime",
      "required": true
    },
    "readTime": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "seoTitle": {
      "type": "string",
      "required": true
    },
    "seoDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "seoKeywords": {
      "type": "json",
      "required": true
    }
  }
} 